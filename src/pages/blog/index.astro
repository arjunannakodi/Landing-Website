---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";

// Fetch posts from WordPress
const response = await fetch("http://landing-website.local/graphql", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
        query: `
      query GetPosts {
        posts(first: 100) {
          nodes {
            title
            slug
            excerpt
            date
            featuredImage {
              node {
                sourceUrl
                altText
              }
            }
          }
        }
      }
    `,
    }),
});

const { data } = await response.json();
const rawPosts = data?.posts?.nodes || [];

// Transform data to match component expectations
const posts = rawPosts.map((post: any) => ({
    title: post.title,
    slug: post.slug,
    excerpt: post.excerpt, // WP Excerpt includes HTML tags usually
    publishDate: new Date(post.date).toLocaleDateString("en-US", {
        year: "numeric",
        month: "short",
        day: "numeric",
    }),
    image: post.featuredImage?.node?.sourceUrl || "/images/app-preview.png",
}));
---

<BaseLayout title="Blog - Nexa">
    <Navbar />
    <main class="min-h-screen pt-24 pb-24 px-6 max-w-7xl mx-auto">
        <header class="mb-20 text-center max-w-3xl mx-auto animate-fade-in-up">
            <div
                class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 font-medium text-xs mb-8"
            >
                <span>The Nexa Blog</span>
            </div>

            <h1
                class="text-5xl md:text-7xl font-bold tracking-tighter text-white mb-8"
            >
                Latest updates
            </h1>
            <p class="text-xl text-gray-400 leading-relaxed">
                News, tips, and insights from the Nexa team to help you work
                better.
            </p>
        </header>

        {
            posts.length === 0 ? (
                <div class="text-center text-gray-400 py-20 animate-fade-in-up">
                    <p class="text-xl">No blog posts found. Check back soon!</p>
                </div>
            ) : (
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {posts.map((post: any, index: number) => (
                        <article
                            class="group bg-white/5 border border-white/10 rounded-3xl overflow-hidden hover:bg-white/10 transition-all hover:-translate-y-1 duration-300 animate-fade-in-up"
                            style={`animation-delay: ${index * 0.1}s; animation-fill-mode: backwards;`}
                        >
                            <a
                                href={`/blog/${post.slug}`}
                                class="block h-full flex flex-col"
                            >
                                <div class="aspect-video w-full overflow-hidden">
                                    <img
                                        src={post.image}
                                        alt={post.title}
                                        class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700 ease-out"
                                    />
                                </div>
                                <div class="p-8 flex-1 flex flex-col">
                                    <div class="text-xs font-bold tracking-widest text-blue-400 mb-4 uppercase">
                                        {post.publishDate}
                                    </div>
                                    <h2 class="text-2xl font-bold text-white mb-4 leading-tight group-hover:text-blue-400 transition-colors">
                                        {post.title}
                                    </h2>
                                    <div
                                        class="text-gray-400 mb-6 line-clamp-3 text-sm leading-relaxed flex-1 prose prose-invert prose-p:text-gray-400 prose-p:text-sm prose-p:leading-relaxed prose-p:mb-0"
                                        set:html={post.excerpt}
                                    />
                                    <span class="text-white font-medium inline-flex items-center gap-2 group-hover:gap-3 transition-all text-sm mt-auto">
                                        Read article{" "}
                                        <span
                                            aria-hidden="true"
                                            class="text-blue-400"
                                        >
                                            &rarr;
                                        </span>
                                    </span>
                                </div>
                            </a>
                        </article>
                    ))}
                </div>
            )
        }
    </main>
    <Footer />
</BaseLayout>
