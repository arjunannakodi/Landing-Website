---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Resources - Nexa">
    <Navbar />

    <main class="pt-24 pb-24">
        <!-- Hero -->
        <section class="max-w-4xl mx-auto px-6 text-center mb-24">
            <h1
                class="text-5xl md:text-7xl font-bold tracking-tight text-gray-900 mb-6 font-inter"
            >
                Resources
            </h1>
            <p class="text-xl text-gray-500 max-w-2xl mx-auto">
                Guides, tutorials, and inspiration to help you get the most out
                of Nexa.
            </p>
        </section>

        <!-- Featured Section -->
        <section class="max-w-7xl mx-auto px-6 mb-24">
            <div class="grid md:grid-cols-2 gap-12">
                <div
                    class="rounded-3xl overflow-hidden bg-gray-100 h-[400px] relative group cursor-pointer"
                >
                    <div
                        class="absolute inset-0 bg-blue-600/10 group-hover:bg-blue-600/20 transition-colors"
                    >
                    </div>
                    <div class="absolute bottom-0 left-0 p-10">
                        <span
                            class="text-blue-600 font-bold tracking-wider uppercase text-sm mb-2 block"
                            >New</span
                        >
                        <h2 class="text-3xl font-bold mb-2">
                            Getting Started with Nexa
                        </h2>
                        <p class="text-gray-600">
                            The basics of pages, blocks, and databases.
                        </p>
                    </div>
                </div>
                <div class="grid gap-8">
                    <div
                        class="rounded-3xl bg-gray-50 p-8 flex flex-col justify-center border border-gray-100 hover:border-gray-300 transition-colors cursor-pointer"
                    >
                        <h3 class="text-xl font-bold mb-2">
                            Nexa for Startups
                        </h3>
                        <p class="text-gray-500 text-sm">
                            How to manage your roadmap, docs, and tasks in one
                            place.
                        </p>
                    </div>
                    <div
                        class="rounded-3xl bg-gray-50 p-8 flex flex-col justify-center border border-gray-100 hover:border-gray-300 transition-colors cursor-pointer"
                    >
                        <h3 class="text-xl font-bold mb-2">
                            Migrating from Evernote
                        </h3>
                        <p class="text-gray-500 text-sm">
                            Import your notes in seconds.
                        </p>
                    </div>
                    <div
                        class="rounded-3xl bg-gray-50 p-8 flex flex-col justify-center border border-gray-100 hover:border-gray-300 transition-colors cursor-pointer"
                    >
                        <h3 class="text-xl font-bold mb-2">Nexa AI Guide</h3>
                        <p class="text-gray-500 text-sm">
                            Write faster and automate tedious tasks.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Categories -->
        <section class="max-w-7xl mx-auto px-6">
            <h2 class="text-2xl font-bold mb-8">Browse by Category</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <!-- Card 1 -->
                <a href="#" class="group block">
                    <div
                        class="bg-orange-50 rounded-2xl p-6 aspect-square mb-4 flex items-center justify-center group-hover:scale-105 transition-transform"
