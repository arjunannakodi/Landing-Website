---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Download - Replicate Notion">
    <Navbar />

    <main class="pt-12 pb-24">
        <!-- Hero Section -->
        <section class="max-w-7xl mx-auto px-6 text-center mb-24">
            <h1
                class="text-4xl md:text-6xl font-bold tracking-tight text-gray-900 mb-8 font-inter leading-tight"
            >
                Download Replicate Notion
            </h1>
            <p class="text-xl text-gray-500 max-w-2xl mx-auto mb-12">
                Get the app for Mac, Windows, iOS, and Android. Keep your
                projects and knowledge close at hand.
            </p>

            <div class="flex justify-center gap-4 mb-20">
                <button
                    class="bg-black text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-gray-800 transition-all shadow-xl flex items-center gap-3"
                >
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
                        ><path
                            d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.3-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.5 1.3 0 2.52.87 3.31.87.76 0 2.2-.87 3.7-.87 1.24.05 2.37.5 3.1 1.27-2.67 1.63-2.2 5.5.54 6.7-.56 1.63-1.35 3.25-2.76 4.64zM13 5.5c.67-1.16 1.12-2.39.96-3.5-1.07.03-2.35.73-3.1 1.62-.64.76-1.2 1.98-1.05 3.12 1.18.09 2.4-.76 3.19-1.24z"
                        ></path></svg
                    >
                    Download for Mac
                </button>
                <button
                    class="bg-blue-600 text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-blue-700 transition-all shadow-xl flex items-center gap-3"
                >
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"
                        ><path
                            d="M0 3.449L9.75 2.1v9.451H0zM9.75 12.45H0v9.451L9.75 20.55zM10.5 1.95L24 .05v11.4H10.5zM10.5 12.6H24v11.35l-13.5-1.9z"
                        ></path></svg
                    >
                    Download for Windows
                </button>
            </div>

            <!-- Image Grid -->
            <div
                class="relative w-full max-w-5xl mx-auto h-[400px] md:h-[600px] bg-gray-100 rounded-3xl overflow-hidden shadow-2xl border border-gray-200"
            >
                <!-- Mac Window -->
                <div
                    class="absolute top-[10%] left-[5%] w-[60%] h-[80%] bg-white rounded-xl shadow-xl border border-gray-300 overflow-hidden z-10"
                >
                    <div
                        class="h-8 bg-gray-50 border-b border-gray-200 flex items-center px-4 gap-2"
                    >
                        <div class="w-3 h-3 rounded-full bg-red-400"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                        <div class="w-3 h-3 rounded-full bg-green-400"></div>
                    </div>
                    <div class="p-8">
                        <h2 class="text-2xl font-bold mb-4">
                            Engineering Wiki
                        </h2>
                        <div class="space-y-4">
                            <div class="h-4 w-3/4 bg-gray-100 rounded"></div>
                            <div class="h-4 w-full bg-gray-100 rounded"></div>
                            <div class="h-4 w-5/6 bg-gray-100 rounded"></div>
                        </div>
                    </div>
                </div>

                <!-- Phone -->
                <div
                    class="absolute top-[20%] right-[10%] w-[25%] h-[70%] bg-black rounded-[2rem] shadow-2xl z-20 p-2 border-4 border-gray-800"
                >
                    <div
                        class="w-full h-full bg-white rounded-[1.5rem] overflow-hidden relative"
                    >
                        <div
                            class="absolute top-0 left-0 w-full h-6 bg-gray-100 border-b border-gray-200"
                        >
                        </div>
                        <div class="p-4 mt-6">
                            <div class="h-20 bg-blue-50 rounded-lg mb-4"></div>
                            <div class="space-y-2">
                                <div class="h-2 w-full bg-gray-100 rounded">
                                </div>
                                <div class="h-2 w-full bg-gray-100 rounded">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Mobile Section -->
        <section class="max-w-7xl mx-auto px-6 py-24 border-t border-gray-100">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div>
                    <h2
                        class="text-4xl font-bold tracking-tight text-gray-900 mb-6"
                    >
                        On the go? <br /> Take Replicate Notion with you.
                    </h2>
                    <p class="text-lg text-gray-500 mb-8">
                        Access your notes, tasks, and wikis from anywhere.
                        Offline mode included.
                    </p>
                    <div class="flex gap-4">
                        <button
                            class="bg-gray-900 text-white px-6 py-3 rounded-lg font-bold hover:bg-black transition-colors"
                        >
                            iOS App Store
                        </button>
                        <button
                            class="bg-gray-900 text-white px-6 py-3 rounded-lg font-bold hover:bg-black transition-colors"
                        >
                            Google Play
                        </button>
                    </div>
                </div>
                <div
                    class="bg-gray-50 rounded-3xl p-12 flex justify-center items-center"
                >
                    <div class="text-center">
                        <div
                            class="w-48 h-48 bg-white p-4 rounded-xl shadow-lg mx-auto mb-6"
                        >
                            <!-- Fake QR Code -->
                            <div
                                class="w-full h-full bg-gray-900 pattern-grid-lg opacity-80"
                            >
                            </div>
                        </div>
                        <p class="text-sm font-medium text-gray-500">
                            Scan to download
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</BaseLayout>
