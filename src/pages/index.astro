---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import BentoGrid from "../components/BentoGrid.astro";

import NotionNewFeature from "../components/NotionNewFeature.astro";
import NotionAppPreview from "../components/NotionAppPreview.astro";
---

<BaseLayout title="Replicate Notion - Your Connected Workspace">
	<Navbar />
	<main>
		<Hero />

		<!-- App Preview Hero Visual -->
		<div
			class="px-4 md:px-8 max-w-[1400px] mx-auto -mt-10 mb-32 relative z-20 animate-fade-in-up"
			style="animation-delay: 0.4s; animation-fill-mode: backwards;"
		>
			<div
				class="border-[8px] border-white/50 backdrop-blur-xl rounded-[2rem] shadow-2xl"
			>
				<NotionAppPreview />
			</div>
		</div>

		<BentoGrid />

		<NotionNewFeature />

		<section class="bg-gray-50 py-24 border-t border-b border-gray-200">
			<div class="max-w-4xl mx-auto px-6 text-center">
				<h2
					class="text-3xl md:text-5xl font-bold mb-6 animate-on-scroll"
				>
					Get started for free
				</h2>
				<p
					class="text-lg text-gray-600 mb-8 animate-on-scroll"
					style="transition-delay: 100ms"
				>
					Play around with it first. Pay and add your team later.
				</p>
				<div
					class="flex flex-col sm:flex-row justify-center gap-4 animate-on-scroll"
					style="transition-delay: 200ms"
				>
					<button
						class="bg-black text-white px-8 py-3 rounded-lg font-bold hover:bg-gray-800 transition-colors shadow-lg"
						>Try Replicate Notion free</button
					>
					<button
						class="text-blue-600 font-medium hover:underline flex items-center justify-center gap-1 group"
						>Request a demo <span
							aria-hidden="true"
							class="group-hover:translate-x-1 transition-transform"
							>&rarr;</span
						></button
					>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</BaseLayout>
