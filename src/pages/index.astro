---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import FeatureCard from "../components/FeatureCard.astro";
import Footer from "../components/Footer.astro";

import NotionNewFeature from "../components/NotionNewFeature.astro";

const features = [
	{
		title: "AI Assisted Writing",
		desc: "Write faster and clearer with AI.",
		icon: "/icons/ai.svg",
	},
	{
		title: "Wikis",
		desc: "Centralize your knowledge.",
		icon: "/icons/wiki.svg",
	},
	{
		title: "Projects",
		desc: "Manage complex workflows.",
		icon: "/icons/projects.svg",
	},
	{
		title: "Docs",
		desc: "Simple, powerful documents.",
		icon: "/icons/docs.svg",
	},
];
---

<BaseLayout title="Replicate Notion - Your Connected Workspace">
	<Navbar />
	<main>
		<Hero />
		<NotionNewFeature />

		<section class="max-w-6xl mx-auto px-6 py-24">
			<div class="text-center mb-16 animate-on-scroll">
				<h2 class="text-3xl md:text-5xl font-bold mb-4">
					Millions run on Replicate Notion every day
				</h2>
				<p class="text-xl text-gray-600 max-w-2xl mx-auto">
					Powering the world's best teams, from next-generation
					startups to established enterprises.
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
				{
					features.map((feature, index) => (
						<div
							class="animate-on-scroll"
							style={`transition-delay: ${index * 100}ms`}
						>
							<FeatureCard {...feature} />
						</div>
					))
				}
			</div>

			<div class="mt-24 text-center animate-on-scroll">
				<h3 class="text-3xl font-bold mb-6">
					Consolidate tools. Cut costs.
				</h3>
				<div
					class="p-10 bg-gray-100 rounded-3xl border border-gray-200"
				>
					<div
						class="flex justify-center items-center h-48 text-gray-400"
					>
						<span class="text-2xl font-medium"
							>Interactive App Preview Placeholder</span
						>
					</div>
				</div>
			</div>
		</section>

		<section class="bg-gray-50 py-24 border-t border-b border-gray-200">
			<div class="max-w-4xl mx-auto px-6 text-center">
				<h2
					class="text-3xl md:text-5xl font-bold mb-6 animate-on-scroll"
				>
					Get started for free
				</h2>
				<p
					class="text-lg text-gray-600 mb-8 animate-on-scroll"
					style="transition-delay: 100ms"
				>
					Play around with it first. Pay and add your team later.
				</p>
				<div
					class="flex flex-col sm:flex-row justify-center gap-4 animate-on-scroll"
					style="transition-delay: 200ms"
				>
					<button
						class="bg-black text-white px-8 py-3 rounded-lg font-bold hover:bg-gray-800 transition-colors shadow-lg"
						>Try Replicate Notion free</button
					>
					<button
						class="text-blue-600 font-medium hover:underline flex items-center justify-center gap-1 group"
						>Request a demo <span
							aria-hidden="true"
							class="group-hover:translate-x-1 transition-transform"
							>&rarr;</span
						></button
					>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</BaseLayout>
