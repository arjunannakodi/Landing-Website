---
export interface Props {
    title: string;
    desc: string;
    icon: string;
}

const { title, desc, icon } = Astro.props;
---

<div
    class="p-6 bg-white border border-gray-200 rounded-xl hover:shadow-lg transition-all duration-300 hover:-translate-y-1 cursor-pointer group animate-on-scroll"
>
    <!-- Use a div for icon placeholder if src is empty or handle image -->
    {
        icon ? (
            <img
                src={icon}
                class="h-8 w-8 mb-4 group-hover:scale-110 transition-transform"
                alt=""
            />
        ) : (
            <div class="h-8 w-8 mb-4 bg-gray-100 rounded-lg" />
        )
    }

    <h3
        class="font-bold text-lg mb-2 group-hover:text-blue-600 transition-colors"
    >
        {title}
    </h3>
    <p class="text-gray-600 leading-relaxed">{desc}</p>
</div>
