<script>
    document.addEventListener("DOMContentLoaded", () => {
        const tabs = document.querySelectorAll(".feature-tab");
        const contents = document.querySelectorAll(".preview-item");
        let activeIndex = 0;

        function setActiveTab(index) {
            // Update Tabs
            tabs.forEach((tab, i) => {
                const title = tab.querySelector("h3");
                const description = tab.querySelector(".tab-content");

                if (i === index) {
                    title.classList.remove("text-gray-500");
                    title.classList.add("text-white");
                    description.classList.remove("hidden");
                } else {
                    title.classList.add("text-gray-500");
                    title.classList.remove("text-white");
                    description.classList.add("hidden");
                }
            });

            // Update Content
            const target = tabs[index].dataset.target;
            contents.forEach((content) => {
                if (content.dataset.content === target) {
                    content.classList.remove(
                        "opacity-0",
                        "pointer-events-none",
                    );
                    content.classList.add("opacity-100");
                } else {
                    content.classList.remove("opacity-100");
                    content.classList.add("opacity-0", "pointer-events-none");
                }
            });

            activeIndex = index;
        }

        // Initialize first tab
        setActiveTab(0);

        // Click handlers
        tabs.forEach((tab, index) => {
            tab.addEventListener("click", () => {
                setActiveTab(index);
            });
        });
    });
</script>
