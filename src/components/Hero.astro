<section class="pt-24 pb-12 px-6 max-w-7xl mx-auto overflow-hidden relative">
    <!-- Background Gradient Spot -->
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[500px] bg-gradient-to-b from-blue-50 to-transparent opacity-50 blur-3xl -z-10 pointer-events-none"
    >
    </div>

    <div
        class="flex flex-col items-center text-center max-w-4xl mx-auto mb-20 z-10 relative"
    >
        <!-- Badge -->
        <div
            class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-white border border-gray-200 shadow-sm text-gray-600 font-medium text-xs mb-8 hover:bg-gray-50 transition-colors cursor-pointer"
        >
            <span class="flex h-2 w-2 relative">
                <span
                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"
                ></span>
                <span
                    class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"
                ></span>
            </span>
            New: Nexa AI 2.0 is here
            <svg
                class="w-3 h-3 text-gray-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path></svg
            >
        </div>

        <!-- Headline -->
        <h1
            class="animate-fade-in-up text-5xl md:text-7xl lg:text-8xl font-bold tracking-tighter text-gray-900 mb-8 leading-[1.1]"
        >
            The connected <br class="hidden md:block" />
            <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600"
                >workspace.</span
            >
        </h1>

        <!-- Subhead -->
        <p
            class="animate-fade-in-up mt-2 text-xl md:text-2xl text-gray-500 mb-10 max-w-2xl leading-relaxed"
            style="animation-delay: 0.1s; animation-fill-mode: backwards;"
        >
            Wiki, docs, and projects. Together. <br class="hidden md:block" />
            Write better, think clearly, and stay organized.
        </p>

        <!-- Buttons -->
        <div
            class="flex flex-col sm:flex-row items-center gap-4 animate-fade-in-up"
            style="animation-delay: 0.2s; animation-fill-mode: backwards;"
        >
            <button
                class="bg-black text-white px-8 py-4 rounded-xl font-bold text-lg hover:bg-gray-800 transition-all hover:scale-105 active:scale-95 shadow-xl shadow-gray-200"
            >
                Get Nexa free
            </button>
            <button
                class="bg-white text-gray-900 px-8 py-4 rounded-xl font-bold text-lg hover:bg-gray-50 transition-colors border border-gray-200 hover:border-gray-300"
            >
                Request a demo
            </button>
        </div>
    </div>

    <!-- Trusted Teams -->
    <div class="text-center mt-12 border-t border-gray-100/50 pt-12">
        <p
            class="text-gray-400 font-medium mb-8 text-sm uppercase tracking-widest"
        >
            Trusted by teams at
        </p>
        <div
            class="flex flex-wrap justify-center items-center gap-x-16 gap-y-10 opacity-50 grayscale hover:grayscale-0 transition-all duration-500"
        >
            <!-- Simple text logos for speed/cleanliness -->
            <span class="font-bold text-xl font-inter">Figma</span>
            <span class="font-bold text-xl font-inter">Linear</span>
            <span class="font-bold text-xl font-inter">Stripe</span>
            <span class="font-bold text-xl font-inter">Pinterest</span>
            <span class="font-bold text-xl font-inter">Pixar</span>
        </div>
    </div>
</section>
